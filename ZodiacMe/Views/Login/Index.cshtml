@model ZodiacMe.BD.ViewModels.LoginViewModel;
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-controller = "Login" asp-action="Index">
    <div class="login-container">
        <div class="form-container">
            <div class="row">
                <div class="col-12">
                    <h3 class="p-blue mb-4">Iniciar Sesión</h3>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control" placeholder="correo@ejemplo.com">
                        <label asp-for="Email">Correo</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        <label asp-for="Password">Contraseña</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button class="btn btn-primary px-4 mt-4" type="submit">Entrar</button>
                </div>
            </div>
        </div>
    </div>
</form>